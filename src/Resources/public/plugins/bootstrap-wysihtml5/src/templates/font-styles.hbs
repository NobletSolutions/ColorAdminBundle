<li class="dropdown">
  <a class="btn btn-default dropdown-toggle {{#if options.toolbar.size}}btn-{{options.toolbar.size}}{{/if}}" data-toggle="dropdown">
    {{#if options.toolbar.fa}}
      <span class="fa fa-font"></span>
    {{else}}
      <span class="glyphicon glyphicon-font"></span>
    {{/if}}
