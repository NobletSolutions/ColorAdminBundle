{% if pageCount > 1 %}
    <ul class="pagination {{ pagination.wrapper_class }} btn-group">

        {% if previous is defined %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&laquo;&nbsp;{{ pagination.labels ? ('Previous'|trans) : '' }}</a>
            </li>
        {% else %}
            <li class="disabled">
                <a href="javascript:;">&laquo;&nbsp;{{ pagination.labels ? ('Previous'|trans) : '' }}</a>
            </li>
        {% endif %}

        {% if startPage > 1 %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a>
            </li>
            {% if startPage == 3 %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a>
                </li>
            {% elseif startPage != 2 %}
                <li class="disabled">
                    <a href="javascript:;">&hellip;</a>
                </li>
            {% endif %}
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                </li>
            {% else %}
                <li class="active">
                    <a href="javascript:;">{{ page }}</a>
                </li>
            {% endif %}

        {% endfor %}

        {% if pageCount > endPage %}
            {% if pageCount > (endPage + 1) %}
                {% if pageCount > (endPage + 2) %}
                    <li class="disabled">
                        <a href="javascript:;">&hellip;</a>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">{{ pageCount -1 }}</a>
                    </li>
                {% endif %}
            {% endif %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount }}</a>
            </li>
        {% endif %}

        {% if next is defined %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): next})) }}">{{ pagination.labels ? ('Next'|trans) : '' }}&nbsp;&raquo;</a>
            </li>
        {% else %}
            <li class="disabled">
                <a href="javascript:;">{{ pagination.labels ? ('Next'|trans) : '' }}&nbsp;&raquo;</a>
            </li>
        {% endif %}
    </ul>
{% endif %}
