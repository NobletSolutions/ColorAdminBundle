{% extends 'NSColorAdminBundle::base.html.twig' %}

{% block sidebar %}{% endblock %}
{% block header %}{% endblock %}
{% block breadcrumbs %}{% endblock %}
{% block page_header %}{% endblock %}
{% block content_class %}content nomenu nopadding{% endblock %}
{% block body %}
    {% block login %}
        <!-- begin login -->
        <div class="login bg-black">
            <!-- begin brand -->
            <div class="login-header">
                <div class="brand">
                    <span class="logo"></span> {% block login_sitename%}Color Admin{% endblock %}
                    <small>{% block login_subtitle %}responsive bootstrap 3 admin template{% endblock %}</small>
                </div>
                <div class="icon">
                    <i class="fa fa-sign-in"></i>
                </div>
            </div>
            <!-- end brand -->
            <div class="login-content">
                {% block errors %}
                    {% if error %}
                        <div class="alert alert-danger fade in m-b-15">
                            <strong>Error!</strong>
                            {{ error.message }}
                            <span class="close" data-dismiss="alert">Ã—</span>
                        </div>
                    {% endif %}
                {% endblock %}
                <form action="{% block check_url %}{{ url('login_check') }}{% endblock %}" method="POST" class="margin-bottom-0">
                    <div class="form-group m-b-20">
                        <input type="text" class="form-control input-lg" value="{{ last_username }}" placeholder="Email Address" name="_username" />
                    </div>
                    <div class="form-group m-b-20">
                        <input type="password" class="form-control input-lg" placeholder="Password" name="_password" />
                    </div>
                    <div class="checkbox m-b-20">
                        <label>
                            <input type="checkbox" /> Remember Me
                        </label>
                    </div>
                    <div class="login-buttons">
                        <button type="submit" class="btn btn-success btn-block btn-lg">Sign me in</button>
                    </div>
                </form>
            </div>
        </div>
        <!-- end login -->
    {% endblock %}
{% endblock %}